#
# wm independent hotkeys
#

# terminal emulator
super + Return
	alacritty

# program launcher
super + d
	rofi -show drun -show-icons -theme dracula

# Open firefox/blender
super + {_,shift} + b
	{firefox, blender}

# Open Godot
super + {_,shift} + g
	{godot, gimp}

# Open up chat platforms
super + {_,shift} + c
	{discord-canary, hexchat}

# Games
super + shift + {s,m}
	{steam, multimc}

# Emulation
super + {_,shift} + e
	{retroarch, dosbox}

# Emacs and Network Configuration
super + {_,shift} + w
	{emacs, nm-connection-editor}

# Audio software + lxappearance
super + a: {a,l}
	{audacity, lmms}

# Libre Office
super + o
	libreoffice

# Dwarf Fortress
super + shift + f
	dwarffortress

# Asthetic
super + {_,shift} + u
	{sxiv -t ~/Pictures/Wallpapers/*.jpg, lxappearance}

#
# bspwm hotkeys
#

# quit/restart bspwm
super + shift + {q,r}
	bspc {quit,wm -r}

# Run custom lockscreen script
super + x
	lockscreen

# close and show hidden elements
super + q
	xdo close && bspunhide

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# Rotate tree
super + shift + {d,a}
    bspc node @/ -C {forward,backward}

#
# state/flags
#

# Toggle fullscreen
super + f
	bspfullscreen

# Switch to a floating window
super + s
	bspc node -t floating && bspunhide

# Switch to a tiled/pseudo_tiled window
super + {_,shift} + t
	bspc node -t {tiled, pseudo_tiled} && bspunhide

# Pin a window to all workspaces
super + shift + y
	bspc node -g sticky

#
# focus/swap
#

# focus or send the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}' --follow

# Send to a given desktop without following
super + alt +{1-9,0}
	bspc node -d '^{1-9,10}'

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# Expand/contract a window by moving one of its side outward/inward
super + r : {h,j,k,l}
    STEP=20; SELECTION={1,2,3,4}; \
    bspc node -z $(echo "left -$STEP 0,bottom 0 $STEP,top 0 -$STEP,right $STEP 0" | cut -d',' -f$SELECTION) || \
    bspc node -z $(echo "right -$STEP 0,top 0 $STEP,bottom 0 -$STEP,left $STEP 0" | cut -d',' -f$SELECTION)

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# Change window gap
super + {equal, minus}
	bspc config -d focused window_gap $((`bspc config -d focused window_gap` {+,-} 2 ))

#
# mouse bindings
#

# No idea why, but alt here some how translates to super

# Move or resize window
alt + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

# Needed for ^^^^
alt + !button{1-3}
    bspc pointer -t %i %i

#
# Media Keys
#

# Sound
XF86AudioRaiseVolume
    pactl set-sink-volume @DEFAULT_SINK@ +5%

XF86AudioLowerVolume
    pactl set-sink-volume @DEFAULT_SINK@ -5% 

XF86AudioMute
    pactl set-sink-mute @DEFAULT_SINK@ toggle

XF86AudioMicMute
    pactl set-source-mute 1 toggle

# Screen Brightness
XF86MonBrightnessUp 
    xbacklight -inc 5

XF86MonBrightnessDown
    xbacklight -dec 5

# Media Player Controls
XF86AudioPlay
    playerctl play-pause

XF86AudioPause
    playerctl pause

XF86AudioNext
    playerctl next

XF86AudioPrev
     playerctl previous

XF86AudioStop
     playerctl stop

# Extra Thinkpad Media key functionality
XF86Search
	alacritty -e ranger

XF86LaunchA
	alacritty -e bpytop

XF86Explorer
	alacritty -e ncmpcpp

# Take Screenshots
Print
	scrot ~/Pictures/scrot/screenshot.png
alt + Print
	scrot -s ~/Pictures/scrot/screenshot.png

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd
